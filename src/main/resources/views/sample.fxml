<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f0f0f0;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.westernyey.kur2.controllers.AuthController" prefWidth="1000" prefHeight="800">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button fx:id="loginButton" onAction="#handleLogin" text="Login" styleClass="button"/>
        <Button onAction="#handleRegister" text="Register" styleClass="button"/>
        <Label fx:id="statusLabel"/>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
</VBox>
