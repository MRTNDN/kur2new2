<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.fxml.FXMLLoader?>
<?import javafx.scene.control.Label?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.westernyey.kur2.controllers.BaseController"
            prefHeight="800.0" prefWidth="800.0"
            style="-fx-background-color: #f0f0f0;">
    <!-- Верхняя часть с кнопками навигации -->
    <HBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">


    </HBox>

    <!-- Левая часть с MovieList.fxml -->
    <AnchorPane AnchorPane.topAnchor="50" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="50">
        <fx:include source="MovieList.fxml" fx:id="movieList"/>
    </AnchorPane>

    <!-- Правая часть с другим контентом -->
    <AnchorPane AnchorPane.topAnchor="50" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="50">
        <!-- Здесь можешь добавить другой контент -->
        <!-- Например, кнопку или метку -->
        <Button text="Другой контент"/>
    </AnchorPane>

</AnchorPane>
